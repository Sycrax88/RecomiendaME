<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <ImageView
        android:id="@+id/poster_image_view"
        android:layout_width="405dp"
        android:layout_height="183dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/restaurant_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:includeFontPadding="false"
        android:text="@string/restaurant_title"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster_image_view" />

    <TextView
        android:id="@+id/rating_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:maxLength="4"
        android:text="@string/rating_label"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/star5_image_view"
        app:layout_constraintTop_toBottomOf="@+id/location_imageView" />

    <TextView
        android:id="@+id/menu_label_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/menu_label"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_image_view" />

    <TextView
        android:id="@+id/developer_label_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/opinions"
        android:textColor="@color/primary_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/star1_image_view" />

    <TextView
        android:id="@+id/location_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:fontFamily="sans-serif-black"
        android:text="@string/location_example"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/location_imageView"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_name_text_view" />

    <ImageView
        android:id="@+id/location_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_name_text_view"
        app:tint="@color/primary_dark" />

    <ImageView
        android:id="@+id/menu_image_view"
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:contentDescription="@string/menu_label"
        android:src="@drawable/ic_menu_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_name_text_view"
        app:tint="@color/primary_dark" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/opinions_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/create_opinion_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer_label_text_view2"
        tools:listitem="@layout/opinion_item" />

    <Button
        android:id="@+id/create_opinion_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="60dp"
        android:text="@string/create_opinion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/star1_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_star_rate_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_imageView"
        app:tint="@color/primary_dark" />

    <ImageView
        android:id="@+id/star2_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_star_rate_empty"
        app:layout_constraintStart_toEndOf="@+id/star1_image_view"
        app:layout_constraintTop_toBottomOf="@+id/location_imageView"
        app:tint="@color/primary_dark" />

    <ImageView
        android:id="@+id/star3_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_star_rate_empty"
        app:layout_constraintStart_toEndOf="@+id/star2_image_view"
        app:layout_constraintTop_toBottomOf="@+id/location_imageView"
        app:tint="@color/primary_dark" />

    <ImageView
        android:id="@+id/star4_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_star_rate_empty"
        app:layout_constraintStart_toEndOf="@+id/star3_image_view"
        app:layout_constraintTop_toBottomOf="@+id/location_imageView"
        app:tint="@color/primary_dark" />

    <ImageView
        android:id="@+id/star5_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_star_rate_empty"
        app:layout_constraintStart_toEndOf="@+id/star4_image_view"
        app:layout_constraintTop_toBottomOf="@+id/location_imageView"
        app:tint="@color/primary_dark" />

</androidx.constraintlayout.widget.ConstraintLayout>
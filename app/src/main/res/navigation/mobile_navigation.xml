<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_login">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.colosoft.recomiendame.ui.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_restaurants"
        android:name="com.colosoft.recomiendame.ui.restaurants.RestaurantsFragment"
        android:label="@string/restaurants"
        tools:layout="@layout/fragment_restaurants" >
        <action
            android:id="@+id/action_navigation_restaurants_to_navigation_details"
            app:destination="@id/navigation_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_details"
        android:name="com.colosoft.recomiendame.ui.details.DetailsFragment"
        android:label="@string/details"
        tools:layout="@layout/fragment_details" >
    <argument
        android:name="restaurant"
        app:argType="com.colosoft.recomiendame.server.model.Restaurant" />
        <action
            android:id="@+id/action_navigation_details_to_navigation_write_opinion"
            app:destination="@id/navigation_write_opinion" />
    </fragment>

    <fragment
        android:id="@+id/navigation_write_opinion"
        android:name="com.colosoft.recomiendame.ui.writeopinion.WriteOpinionFragment"
        android:label="@string/write_opinion_title"
        tools:layout="@layout/fragment_write_opinion" >
        <argument
            android:name="restaurant"
            app:argType="com.colosoft.recomiendame.server.model.Restaurant" />
        <action
            android:id="@+id/action_navigation_write_opinion_to_navigation_restaurants"
            app:destination="@id/navigation_restaurants" />
    </fragment>

    <fragment
        android:id="@+id/navigation_surprise"
        android:name="com.colosoft.recomiendame.ui.surprise.SurpriseFragment"
        android:label="@string/surprise"
        tools:layout="@layout/fragment_surprise" />
    <fragment
        android:id="@+id/navigation_login"
        android:name="com.colosoft.recomiendame.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_navigation_login_to_navigation_signup"
            app:destination="@id/navigation_signup" />
        <action
            android:id="@+id/action_navigation_login_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/navigation_signup"
        android:name="com.colosoft.recomiendame.ui.signup.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_navigation_signup_to_navigation_login"
            app:destination="@id/navigation_login" />
    </fragment>
</navigation>